<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_background"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#40d7cb"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/image_course"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_android_black_24dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Lập Trình Android"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/decription_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Bài học sẽ giúp các sinh viên hiểu rõ về lập trình android ở mức cơ bản"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/episode_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số bài:" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>